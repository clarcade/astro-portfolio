---
import {Image} from 'astro:assets';
import CoryLarcadeImage from '../images/Cory-Larcade.png';
import SideBySideCard from './SideBySideCard.astro';
---

<div class='resume-summary-card'>
	<SideBySideCard>
		<div
			class='resume-summary-card__left-content'
			slot='first'
		>
			<div
				class='resume-summary-card__image-container'
			>
				<Image
					src={CoryLarcadeImage}
					width='300'
					height='300'
					format='webp'
					alt='Cory Larcade'
				/>
			</div>
		</div>

		<div
			class='resume-summary-card__content'
			slot='second'
		>
			<div class='resume-summary-card__content__label'>Name:</div>
			<div class='resume-summary-card__content__value'>Cory Larcade</div>
			<div class='resume-summary-card__content__label'>Profession:</div>
			<div class='resume-summary-card__content__value'>Software Engineer</div>
			<div class='resume-summary-card__content__label'>Specialty:</div>
			<div class='resume-summary-card__content__value'>Frontend</div>
			<div class='resume-summary-card__content__label'>Level:</div>
			<div class='resume-summary-card__content__value'>Senior, L4</div>
			<div class='resume-summary-card__content__label'>Experience (years):</div>
			<div class='resume-summary-card__content__value'>10</div>
			<div class='resume-summary-card__content__label'>Education:</div>
			<div class='resume-summary-card__content__value'>B.S. in Computer Science</div>
			<div class='resume-summary-card__content__divider' />
			<div class='resume-summary-card__content__label'>Employer:</div>
			<div class='resume-summary-card__content__value'>Adobe</div>
		</div>
	</SideBySideCard>
</div>

<style lang='scss'>

	@use '../styles/breakpoints';
	@use '../styles/colors';

	.resume-summary-card {
		&__left-content {
			background: url('../images/pattern-herringbone.png') repeat;
			background-size: contain;
			display: flex;
			justify-content: center;
		}
		&__image-container {
			& :global(img) {
				height: 100%;
		    width: 100%;
			}
		}

		&__content {
			background-color: var(--green-50);
			color: colors.$white;
			display: grid;
			grid-template-columns: auto 1fr;
			grid-template-rows: repeat(8, auto);
			padding: 20px;
			grid-gap: 20px 10px;

			&__label {
			}

			&__value {
				font-weight: 700;
			}

			&__divider {
				grid-column: span 2;
				border-top: 2px solid var(--green-0);
				height: 2px;
				width: 100%;
			}
		}
	}


	@media screen and (min-width: breakpoints.$breakpoint--1025) {
		.resume-summary-card {
			&__content {
				grid-template-columns: 1fr 1fr;
			}
		}
	}

</style>
