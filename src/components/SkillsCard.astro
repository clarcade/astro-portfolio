---
import {Image} from 'astro:assets';
import {type ImageMetadata} from 'astro';
import SideBySideCard from './SideBySideCard.astro';

export interface SkillsData {
	topic: string;
	items?: Array<string>;
}

export interface SkillsCardData {
	img: string | ImageMetadata;
	imgAltText: string;
	title: string;
	items: Array<SkillsData>;
}

interface Props {
	data: SkillsCardData;
}

const {
	data: {
		items,
		img,
		imgAltText,
	},
} = Astro.props;
---

<div class='skills-card'>
	<SideBySideCard>
		<div
			class='skills-card__left-content'
			slot='first'
		>
			<div class='skills-card__image-container'>
				<Image
					src={img as any}
					width='300'
					height='400'
					format='webp'
					alt={imgAltText}
				/>
			</div>
		</div>

		<div
			class='skills-card__content'
			slot='second'
		>
			<div class='skills-card__skills'>
				{items.map(({topic, items}) => (
					<>
						<div class='skills-card__skills__topic'>{topic}</div>
						{items?.length && (
							<ul class='skills-card__skills__list'>
								{items.map((item) => (
									<li class='skills-card__skills__list-item'>
										{item}
									</li>
								))}
							</ul>
						)}
					</>
				))}
			</div>
		</div>
	</SideBySideCard>
</div>

<style lang='scss'>
	@use '../styles/colors';
	@use '../styles/typography';

	.skills-card {
		&__left-content {
			// TODO: Find background image to use
			background-color: orange;
			display: flex;
			justify-content: center;
		}
		&__image-container {
			// width: 100%;
			// height: 100%;
			// width: 300px;
			// height: 416px;
		}

		&__content {
			margin-top: 20px;
		}

		&__title-container {
			display: flex;
			justify-content: center;
		}

		&__title {
			border-bottom: solid 2px var(--gray-200);
			font-size: typography.$mobile-font-size--ML;
		}

		&__skills {
			&__topic {
				margin-top: 20px;

				&:first-of-type {
					margin-top: 0;
				}
			}

			&__list {
				margin-left: 10px;
			}

			&__list-item {}
		}
	}
</style>
